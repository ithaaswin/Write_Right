{
  "manifest_version": 2,
  "name": "WriteRight",
  "version": "1.0",
  "homepage_url": "https://github.com/shakthinandana/Write_Right",
  "description": "A Simple tool to make writing better,faster and professional ",
  "permissions": ["activeTab", "declarativeContent"],
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "css" : ["code/styling/styles.css"],
      "js" : ["code/scripts/popup.js"]
    }
  
  ],

  "page_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png"
    },
    "default_title": "Press Alt + S to search selected / highlighted word",
    "default_popup": "code/scripts/popup.html"
  },

  "background": {
    "scripts": ["code/scripts/background.js"],
    "persistent": false
  },

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Opens popup.html"
    }
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
